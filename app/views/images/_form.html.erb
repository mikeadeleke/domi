<%= form_for @image, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.file_field :photo %>
  </p>
  <p>
    <%= f.label :remote_photo_url, "or image URL" %><br />
    <%= f.text_field :remote_photo_url %>
  </p>
  <p><%= f.submit %></p>
<% end %>